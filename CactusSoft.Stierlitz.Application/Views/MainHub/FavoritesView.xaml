<UserControl x:Class="CactusSoft.Stierlitz.Application.Views.MainHub.FavoritesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Margin="12,0,0,0">
        <StackPanel>
            <Button 
                x:Name="NavigateToFavoritesTriggers"
                Style="{StaticResource TextButtonStyle}" 
                Margin="0,6,0,0"
                Content="{Binding Source={StaticResource LocalizedStrings}, Path=Resources.TriggersTitle}" />
            <Button 
                x:Name="NavigateToFavoritesGraphs"
                Style="{StaticResource TextButtonStyle}" 
                Margin="0,12,0,0"
                Content="{Binding Source={StaticResource LocalizedStrings}, Path=Resources.Graphs}" />
        </StackPanel>
    </Grid>
</UserControl>
